{
    "manifest_version":2,
	"name": "Words Counter",
	"description": "Counts words, letters and whitspaces from your selected text or from the input field",
	"author": "Aldo Curatolo",
	"version": "1.0",
	"icons":{"128":"icon.png"},
    
    
	"background": {
		"scripts": ["background.js"],
        "persistent": false
	},
	"browser_action":{
		"default_icon": "icon.png",
		"default_title": "Words Counter",
		"popup":"popup.html"
	},
    
    "permissions": [
        "tabs",
        "activeTab",
        "https://api.domain.com/"
    ],

    
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}